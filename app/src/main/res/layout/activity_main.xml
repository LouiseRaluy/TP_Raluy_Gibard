<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.louiseraluy.tp_raluy_gibard.MainActivity">

        <TextView
            android:id="@+id/activity_main_greeting_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choississez une porte" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/activity_main_porte1_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Porte 1"/>

        <Button
            android:id="@+id/activity_main_porte2_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Porte 2"/>

        <Button
            android:id="@+id/activity_main_porte3_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Porte 3"/>
    </LinearLayout>


    </LinearLayout>
